{% block style %}
    .note-title {
        font-size:0.8rem;
        font-weight:bold;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        border-bottom: 1px solid #003366;
    }
    .note-tags {
        text-decoration: none;
    }
    .note-cards-box {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .note-card {
        width: 280px;
        font-size:0.7rem;
        padding: 15px 15px 5px 15px;
        margin: 5px;
        border: solid #003366;
        border-radius: 10px;
        color: #003399;
    }
    .note-text {
        height: 120px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow-y: scroll;
        margin: 10px 0 10px 0;
    }
    .tags-box {
        display: flex;
        flex-wrap: wrap;
    }
    .tags-box a {
        margin-right: 3px;
    }
    .note-footer {
        border-top: 1px solid #003366;
        text-align:right;
    }
