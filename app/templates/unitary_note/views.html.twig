{% extends 'base_view.html.twig' %}

{% block contents %}
    <h2>{{ form_name }}</h2>
    {% for note in notes %}
        <hr>
        <div class="unitary-date">
            [　{{ note.dateString }} ({{ note.dateYoubi }})
            <a class="btn btn-link btn-sm" href="{{ path('edit_unitary',
                {
                    id: note.id
                }) }}">
                書く
            </a>
            <a class="btn btn-link btn-sm" href="{{ path('view_unitary',
                {
                    id: note.id
                }) }}">
                見る
            </a>]
        </div>
        <div class="unitary-title">
            {{ note.title }}
        </div>
        <div class="diary-text">
            {{ note.textHtml | raw }}
        </div>
        <div class="diary-footer">
        </div>
    {% endfor %}
{% endblock %}

{% block style %}
    .unitary-date {
        font-size:0.7rem;
        font-weight:bold;
    }
    .unitary-title {
        font-size:1.1rem;
        font-weight:bold;
        margin-bottom:20px;
    }
{% endblock %}
