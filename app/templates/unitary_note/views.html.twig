{% extends 'base_view.html.twig' %}

{% block contents %}
    <h2>{{ form_name }}</h2>
    {% for note in notes %}
        <hr>
        <div class="unitary-date">
            [　{{ note.dateString }} ({{ note.dateYoubi }})　]
        </div>
        <div class="unitary-title">
            {{ note.title }}
            {% for tag in note.tags %}
                <a class="badge bg-primary note-tags" href="{{ path('app_unitary',
                    {
                        tagName: tag.name
                    }) }}">
                    {{ tag.name }}
                </a>
            {% endfor %}
        </div>
        <div class="unitary-text">
            {{ note.textHtml | raw }}
        </div>
        <div class="unitary-footer">
            [<a class="btn btn-link btn-sm" href="{{ path('edit_unitary',
                {
                    id: note.id
                }) }}">
                書く
            </a>
            <a class="btn btn-link btn-sm" href="{{ path('view_unitary',
                {
                    id: note.id
                }) }}">
                見る
            </a>]
        </div>
    {% endfor %}
{% endblock %}

{% block style %}
    .unitary-date {
        font-size:0.7rem;
        font-weight:bold;
    }
    .unitary-title {
        font-size:1.1rem;
        font-weight:bold;
        margin-bottom:20px;
    }
    .unitary-text {
        overflow-wrap: break-word;
    }
    .unitary-footer {
        margin-bottom:40px;
        text-align:right;
    }
    .note-tags {
        text-decoration: none;
    }
{% endblock %}
