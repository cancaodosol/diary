{% extends 'base_view.html.twig' %}

{% block contents %}
    <h2>{{ form_name }}</h2>
    {% for note_unit in note_units %}
        <div class="unitary-date d-flex">
            <a class="text-dark" href="{{ path('new_unitary_with_compact',
                {
                    date: note_unit.date
                }) }}">
                <h3 id="{{ note_unit.date }}" class="py-2">
                        {{ note_unit.dateWithYoubi }}
                </h3>
            </a>
            <div class="mx-1">
                <a href="#{{ note_unit.nextDate }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up-square" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm8.5 9.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707z"/>
                    </svg>
                </a><br>
                <a href="#{{ note_unit.preDate }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-square" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 2a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1zM0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm8.5 2.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293z"/>
                    </svg>
                </a>
            </div>
        </div>
        {% for note in note_unit.notes %}
            <div class="unitary-title">
                ãƒ»<a class="text-dark" href="{{ path('edit_unitary_with_compact',{ id: note.id }) }}">{{ note.title }}</a>
                {% for tag in note.tags %}
                    <a class="badge bg-primary note-tags" href="{{ path('app_unitary',
                        {
                            tagName: tag.name
                        }) }}">
                        {{ tag.name }}
                    </a>
                {% endfor %}
            </div>
            <div class="unitary-text">
                {{ note.textHtml | raw }}
            </div>
            <div class="unitary-footer">
            </div>
        {% endfor %}
        <hr>
    {% endfor %}
{% endblock %}

{% block style %}
    .unitary-date {
        font-size:1.1rem;
        font-weight:bold;
        margin-top:20px;
        margin-bottom:20px;
    }
    .unitary-title {
        font-size:0.9rem;
        font-weight:bold;
        margin-bottom:5px;
    }
    .unitary-text {
        overflow-wrap: break-word;
        padding-left: 13px;
    }
    .unitary-footer {
        margin-bottom:40px;
        text-align:right;
    }
    .note-tags {
        text-decoration: none;
    }
{% endblock %}
