{% extends 'base_view.html.twig' %}

{% block plugins %}
    {{ parent() }}
    <script src="{{ asset("assets/unitarynote.js") }}"></script>
{% endblock %}

{% block contents_wide %}
    <h2>{{ form_name }}</h2>
    {% if(thisTag) %}
    <div class="mb-5 p-3">
        <div class="text-dark">＜ {{ thisTag.name }} ＞ <a href="{{ path('edit_note_tags', { id: thisTag.id }) }}">編集</a></div>
        <div class="mt-1">{{ thisTag.description | raw }}</div>
        <div class="mt-1">{{ thisTag.textHtml | raw }}</div>
    </div>
    <div>
        <a class="btn btn-outline-warning btn-sm" href="{{ path('app_unitary', { tagName: thisTag.name, mode: '' }) }}">
            << 一覧形式で表示
        </a>
        <a class="btn btn-outline-warning btn-sm" href="{{ path('app_unitary', { tagName: thisTag.name, mode: 'card' }) }}">
            >> カード形式で表示
        </a>
    </div>
    {% endif %}
    <div class="calender-cards-box">
    {% for calender_note in calender_notes %}
        <div class="calender-card">
            <div class="note-card">
                <div class="calender-title-row">
                    <a href="{{ path('new_unitary_with_compact', { date: calender_note.date.getDateString() }) }}" style="text-decoration: none;">
                        <div class="calender-title">
                            {{ calender_note.date.format('m / d') }} ({{ calender_note.date.getYoubi() }})
                        </div>
                    </a>
                    {% if calender_note.notes|length > 0 %}
                    <button type="button" class="btn btn-outline-primary btn-sm js-show-normal-notes" data-date="{{ calender_note.date.getDateString() }}">
                        通常表示
                    </button>
                    {% endif %}
                </div>
                <div class="overflow-hidden">{{ calender_note.title | raw }}</div>
                <div class="note-content js-calender-note-content">
                    {% for note in calender_note.notes %}
                        <li class="note-title">
                            <a href="{{ path('view_unitary', { id: note.id }) }}">{{ note.getTitle() }}</a>
                            {% for tag in note.tags %}
                                <a class="badge bg-primary note-tags" href="{{ path('app_unitary',
                                    {
                                        tagName: tag.name
                                    }) }}">
                                    {{ tag.name }}
                                </a>
                            {% endfor %}
                        </li>
                   {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
    <script>
        initCalenderNormalNoteButtons = function() {
            const buttons = document.querySelectorAll('.js-show-normal-notes');
            if(!buttons.length) return;

            buttons.forEach((btn) => {
                btn.addEventListener('click', async () => {
                    const date = btn.dataset.date;
                    if(!date) return;

                    const noteCard = btn.closest('.note-card');
                    if(!noteCard) return;

                    const targetEle = noteCard.querySelector('.js-calender-note-content');
                    if(!targetEle) return;

                    targetEle.classList.remove("timeline");
                    targetEle.classList.add("calender-normal-view");

                    btn.disabled = true;
                    try {
                        const service = new unitaryNoteService();
                        const units = await service.getUnits(date, "1day");
                        targetEle.innerHTML = "";
                        const uNote = new unitaryNote();
                        uNote.displayNormalNotes(targetEle, units, true);
                    } catch (err) {
                        console.error('取得エラー', err);
                        btn.disabled = false;
                    }
                });
            });
        }

        window.addEventListener("load", () => {
            initCalenderNormalNoteButtons();
        });
    </script>
{% endblock %}

{% block style %}
    .calender-title {
        font-size:0.8rem;
        font-weight:bold;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        border-bottom: 1px solid #003366;
        color: #003399;
        text-decoration: none;
    }
    .calender-title-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 6px;
    }
    .calender-normal-view {
        overflow-y: scroll;
        overflow-x: hidden;
    }
    .calender-normal-view > div {
        margin-bottom: 20px;
    }
    .calender-normal-view .unitary-title .text-dark {
        font-size: 0.9rem;
        font-weight: bold;
    }
    .calender-tags {
        text-decoration: none;
    }
    .calender-cards-box {
        display: flex;
        flex-wrap: wrap-reverse;
        align-items: stretch;
    }
    .calender-card {
        width: 14.2%;
        padding: 5px;
        margin-top: 15px;
    }
    .note-card {
        height: 100%;
        font-size:0.7rem;
        padding: 10px;
        border: solid #003366;
        border-radius: 10px;
        color: #003399;
    }
    .note-content {
        margin-top: 10px;
    }
    @media screen and (max-width: 480px) {
        /* 480px以下に適用されるCSS（スマホ用） */
        .calender-card {
            width: 95%;
        }
    }
{% endblock %}
